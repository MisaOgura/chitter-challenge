<center>
  <img src='http://megaicons.net/static/img/icons_sizes/8/178/256/pets-bird-icon.png' width="100" height="100" >
  <font face="Futura">
  <div>
    <h2>Create a Chitter account</h2>
  </div>

  <% if flash[:errors] && !flash[:errors].empty? %>
    <h3>Oops, errors in following areas...</h3>
    <ul id='errors'><h4>
      <% flash[:errors].each do |error| %>
        <li><%= error %></li>
      <% end %>
    </h4></ul>
  <% end %>

  <form action='/users' method='post'>
    <div>
      <input type='text' name='username' placeholder='username'  value='<%= @user.username %>' required>
      <input type='email' name='email' placeholder='email address' value='<%= @user.email %>'required>
    </div>
    <br>
    <div>
      <input type='password' name='password' placeholder='password' required>
      <input type='password' name='password_confirmation' placeholder='password_confirmation' required>
    </div>
    <br>
    <input type='submit' value='Sign up'>
  </form>

  <br>
  <div>
    <h2><p>Or... already have an account?</h2>
  </div>

  <form action='/sessions/new'>
    <input type='submit' value='Jump to login page'>
  </form>
</center>
